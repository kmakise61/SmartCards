rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match the user's root document (e.g., users/123)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Match any document nested UNDER the user (e.g., users/123/cards/abc)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Default deny for any other collections to ensure security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}